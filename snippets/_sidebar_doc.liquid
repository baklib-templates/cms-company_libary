<div class="drawer-side z-40 md:border-r md:border-base-content/10">
  <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label>
  <aside class="bg-base-100 min-h-screen w-80">
    <div class="bg-base-100 sticky top-0 z-20 items-center gap-2 bg-opacity-90 px-4 py-2 backdrop-blur lg:flex">
      <a href="/" class="flex-0 btn btn-ghost px-2">
        <h1 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary/50">
          {{ site.name }}
          <span class="text-sm text-base-content opacity-50">docs</span>
        </h1>
      </a>
    </div>

    <ul class="menu px-4 py-0">
      {% for page in site.pages['/'].children_in_list %}
        <li>
          <h2 class="menu-title flex items-center gap-4 px-1.5">
            {{ page.link_text }}
          </h2>
          <ul>
            {% for sub_page in page.children_in_list %}
              <li class="flex flex-col">
                <a href="{{ sub_page.path }}" class={`hover:text-primary hover:bg-primary/5 transition flex
                  ${pathname===navItem.href ? "text-primary bg-primary/5" : "" }`}>
                  {{ sub_page.link_text }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </li>
      {% endfor %}
    </ul>
  </aside>
</div>
